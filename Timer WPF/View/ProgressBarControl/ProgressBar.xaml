<UserControl x:Class="Timer_WPF.View.ProgressBarControl.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timer_WPF.View.ProgressBarControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    
    <Grid>
        <ProgressBar x:Name="pb_ProgressBar" Style="{StaticResource ProgressBarStyle}" Value="{Binding Progress}" Minimum="0" Maximum="100" Background="Transparent"
                     Height="40" Width="400" Margin="0,30,0,0"
                     VerticalAlignment="Top"/>
    </Grid>
    
</UserControl>
